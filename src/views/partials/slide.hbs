<div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div id="fondo"
                style="background-image: url(/img/index.jpg); background-size:cover; width:100%; height: 100%; "
                class="image">
                <center>
                    <div class="col">
                        <img width="100" height="100" src="/img/icon.svg">
                    </div>
                    <div class="col">
                        <h1 style="font-family:courier; color:ivory">La cocina de yoli</h1>
                    </div>
                    <div class="col">
                        <h2
                            style="font-size: 100 ;font-family:'Brush Script MT', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; color:#C00A27;">
                            Hecho como en casa</h2>
                    </div>
                    <div class="row">
                        <div class="col">
                            <img data-toggle="tooltip"
                                title="Nuestro menú esta hecho con ingredientes frescos y hechos como en casa"
                                width="100" height="100" src="/img/menu.png" alt="">
                        </div>
                        <div class="col">
                            <img data-toggle="tooltip"
                                title="Contamos con servicio a domicilio gratuito y rápido, para que tu comida llegue fresca a tu mesa"
                                src="/img/delivery.svg" width="100" height="100" alt="">
                        </div>
                    </div>
                </center>
            </div>
        </div>
        {{#each products}}
        <div class="carousel-item">
            <div class="fon"
                style="width: 100%; height:400px; background-size:cover; background-image:url('/img/col.png')">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                        <center>
                            <div class="im" style="position:center; text-align: center;">
                                <center>
                                    <h1 style="font-family: candara;"><span style="color: #C00A27 ;">¡Nuevo!</span>
                                        {{name}}
                                    </h1>
                                </center>
                                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                <img width="450" height="350" src="{{imageURL}}" alt="">
                                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                <hr>

                            </div>
                        </center>
                    </div>
                    <div class="col-md" style="">
                        
                            <div class="row">
                                &nbsp;&nbsp;&nbsp;&nbsp;
                            </div>
                            <div class="row">
                                &nbsp;
                            </div>
                            <div class="row">&nbsp;&nbsp;&nbsp;&nbsp;

                            </div>
                            <div class="row">&nbsp;&nbsp;&nbsp;&nbsp;

                            </div>
                            <div class="row">&nbsp;&nbsp;&nbsp;&nbsp;</div>
                            <div class="row">
                                <h1 style="font-family: candara;">
                                    <span>¡ </span><span style="color: #C00A27 ;">Prueba lo nuevo</span> <span>!</span>
                                </h1>
                            </div>
                            <div class="row">
                                <h3 style="font-family: ravie;"><span style="color: #C00A27 ;"></span>
                                    {{description}}
                                </h3>
                            </div>
                            <div class="row">
                                <h1 style="font-family: candara;"><span style="color: #C00A27 ;"></span>
                                    $ {{price}}
                                </h1>
                            </div>
                        
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();

    });
</script>